general {
        colors = true
        interval = 5
}

order += "battery all"
order += "disk /"
order += "load"
order += "tztime local"

battery all {
        format = "%status %percentage"
}

tztime local {
        format = "%m-%d-%Y %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
